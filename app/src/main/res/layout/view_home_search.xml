<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_home_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/view_home_et"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_search_bar"
        android:cursorVisible="false"
        android:gravity="center_vertical"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:textColor="@color/avoscloud_feedback_text_gray"
        android:textColorHint="@color/avoscloud_feedback_text_gray"
        android:textSize="28px"
        />

    <TextView
        android:id="@+id/view_home_tv"
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:layout_gravity="center"
        android:layout_marginLeft="25px"
        android:layout_marginTop="14px"
        android:layout_marginRight="25px"
        android:layout_marginBottom="14px"
        android:clickable="false"
        android:drawableLeft="@drawable/places_ic_search"
        android:drawablePadding="15px"
        android:gravity="center"
        android:text="搜索"
        android:textColor="@color/textGray1"
        android:textSize="15dp" />

</FrameLayout>