<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".note.PublishActivity">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/publish_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fillStatusBar="true"
        app:showBottomLine="false"
        app:titleBarColor="@color/white"
        app:statusBarColor="@color/white"
        app:statusBarMode="dark"
        app:centerType="textView"
        app:centerText="动态"
        app:centerTextColor="@color/black"
        app:leftType="imageButton"
        app:leftDrawable="@mipmap/common_back"
        app:rightType="textView"
        app:rightText="发表"
        app:rightTextColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/publish_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@color/white"
            android:padding="10dp"
            android:gravity="left|top"
            android:hint="记录此情此景"
            android:minLines="5"
            android:textColorHint="@color/textGray1"
            android:maxLength="1000" />

        <com.muyu.minimalism.view.imagebox.ZzImageBox
            android:id="@+id/zz_image_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:zib_left_margin="0dp"
            app:zib_right_margin="0dp"
            app:zib_img_padding="2dp"
            app:zib_img_size_one_line="4"
            app:zib_max_line="1"
            app:zib_img_deletable="true"
            app:zib_img_add="@mipmap/publish_add_img"
            app:zib_img_default="@drawable/iv_default"
            app:zib_img_delete="@drawable/iv_delete"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray0"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:id="@+id/publish_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="@color/black"
                android:src="@mipmap/ic_scene"/>
            <TextView
                android:id="@+id/publish_place_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginHorizontal="5dp"
                android:textSize="15sp"
                android:text="大夫山国家森林公园"/>
            <TextView
                android:id="@+id/publish_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mapbox_blue"
                android:textSize="13sp"
                android:padding="5dp"
                android:text="复制"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray0"
            />
    </LinearLayout>
</LinearLayout>