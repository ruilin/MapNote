<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_moment_dialog"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dialog_moment_head"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/head_def"/>
                <TextView
                    android:id="@+id/footmark_username"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="ruilin"/>
                <TextView
                    android:id="@+id/footmark_pupup_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:text="23"
                    android:textColor="@color/gray4"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/ic_like_count"/>
            </LinearLayout>
            <TextView
                android:id="@+id/footmark_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:singleLine="true"
                android:layout_marginLeft="26dp"
                android:ellipsize="end"
                android:hint="暂无描述"
                android:text=""/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="26dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dialog_moment_addr"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingRight="6dp"
                    android:gravity="center_vertical"
                    android:text="发生的根深蒂固发生的根深蒂固发生的根深蒂固发生的根深蒂固"
                    android:drawablePadding="2dp"
                    android:drawableLeft="@mipmap/ic_place_dot"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/textGray4"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/dialog_moment_route"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingHorizontal="6dp"
                    android:background="@drawable/selector_button_round"
                    android:gravity="center"
                    android:text="查看路线"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/moment_pupup_iv"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="6dp"
            android:visibility="gone"
            android:tint="@color/gray3"
            android:src="@mipmap/common_right"/>
    </LinearLayout>
</LinearLayout>