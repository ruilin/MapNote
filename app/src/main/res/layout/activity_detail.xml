<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".note.PublishActivity">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fillStatusBar="true"
        app:showBottomLine="false"
        app:titleBarColor="@color/white"
        app:statusBarColor="@color/white"
        app:statusBarMode="dark"
        app:centerType="textView"
        app:centerText="发现"
        app:centerTextColor="@color/black"
        app:leftType="imageButton"
        app:leftDrawable="@mipmap/common_back"
        app:rightType="customView"
        app:rightCustomView="@layout/view_like_check"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingHorizontal="2dp"
                android:paddingTop="14dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_user"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="left|top"
                    android:textSize="18sp"
                    android:text="---"
                    android:textColorHint="@color/textGray1"
                    />
                <TextView
                    android:id="@+id/detail_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:text="23"
                    android:textColor="@color/gray4"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/ic_like_count"/>
            </LinearLayout>

            <TextView
                android:id="@+id/detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="2dp"
                android:textColor="@color/black"
                android:paddingVertical="10dp"
                android:gravity="left|top"
                android:text="帅哥就是多了就过了圣诞节噶死的更好了
    根深蒂固收到各位各位旅客据了解"
                android:textSize="16sp"
                android:maxLength="1000" />

            <com.muyu.minimalism.view.imagebox.ZzImageBox
                android:id="@+id/detail_image_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:zib_img_padding="2dp"
                app:zib_img_size_one_line="4"
                app:zib_max_line="1"
                app:zib_img_deletable="false"
                app:zib_img_add="@mipmap/publish_add_img"
                app:zib_img_default="@drawable/iv_default"
                app:zib_img_delete="@drawable/iv_delete"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray0"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:id="@+id/detail_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="14dp"
                android:layout_marginHorizontal="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:tint="@color/black"
                    android:src="@mipmap/ic_place"/>
                <TextView
                    android:id="@+id/detail_place_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="6dp"
                    android:textSize="15sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="大夫山国家森林公园"/>

                <!--<CheckBox-->
                    <!--android:id="@+id/detail_like"-->
                    <!--android:layout_width="40dp"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:button="@drawable/selector_like"/>-->
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray0"
                />

            <TextView
                android:id="@+id/detail_time"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:paddingHorizontal="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textGray3"
                android:textSize="13sp"
                android:text="2019-2-3 13:32"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>