<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/moment_pupup_iv"
            android:layout_width="58dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test_picture"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/footmark_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:lines="2"
                android:ellipsize="end"
                android:text="新东方是根深蒂固了空间新东方是根深蒂固了空间新东方是根深蒂固了空间新东方是根深蒂固了空间"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/footmark_username"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="ruilin"/>
                <TextView
                    android:id="@+id/footmark_pupup_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:text="23"
                    android:textColor="@color/gray4"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/ic_like_count"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/footmark_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:tint="@color/gray3"
            android:src="@mipmap/common_right"/>
    </LinearLayout>
</LinearLayout>